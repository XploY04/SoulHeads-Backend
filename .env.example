# MongoDB Connection String
MONGO_URI=mongodb://username:password@localhost:27017/soulheads

# JWT Secret for token signing
JWT_SECRET=your-long-secure-jwt-secret-key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Server Configuration
PORT=5000
NODE_ENV=development

# Development Testing (set to development for easier testing)
# When NODE_ENV=development, you can use development auth bypasses
DEV_MODE_ENABLED=true

# CORS Configuration (comma-separated for multiple domains)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your_strong_encryption_key

# Firebase (optional for production, can use service account file in dev)
FIREBASE_CONFIG={"type":"service_account","project_id":"your-project-id",...}